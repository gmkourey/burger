<div class="wrapper">
<div class="list">
<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

<form class="create-form">
<h2>Add a Burger</h2>
  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Devoured?</label><br>
    <input type="radio" name="devour" value="1" checked> Yet to be eaten<br>
    <input type="radio" name="devour" value="0"> Devoured
  </div>

  <button id="submit" type="submit">Add Burger</button>
</form>
</div>